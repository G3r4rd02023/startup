@using startup.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/LayoutForLogin.cshtml";
    ViewBag.Title = "Iniciar sesión";
}



<body class="FondoEdificio">
    <div class="LogoLogin">
        <img class="LogoLogin" src="~/Content/Imagenes/Security.png" />
        <p></p>
    </div>
    <div class="row fondotransparenteblanco modal-content ContenidoCentro">
        <p></p>

        <section id="loginForm">
            <p></p>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Iniciar Sesión</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="ContenidoCentro">
                        <input placeholder="Correo" title="Ingrese un correo valido usuario@dominio.com"
                               @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                               @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">

                    <div class="ContenidoCentro">
                        <input placeholder="Contraseña" title="Ingrese su contraseña"
                               @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                               @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="ContenidoCentro">
                        <input type="submit" value="Iniciar sesión" class="btn btn-primary BotonEstirado" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Registrarse", "Register", null, new { @class = "TextoLink" })
                </p>
                //Habilite esta opción después de habilitar la confirmación de la cuenta para la función de restablecimiento de contraseña
                <p>
                    @Html.ActionLink("¿Olvidó su contraseña?", "ForgotPassword", null, new { @class = "TextoLink" })
                </p>
            }
        </section>


    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}